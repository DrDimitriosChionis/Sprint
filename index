      translations.el[key] = el.innerText; // ή el.textContent
    });

    langButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const lang = btn.dataset.lang;
        
        // Απενεργοποίηση όλων των κουμπιών και ενεργοποίηση του επιλεγμένου
        langButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // Αλλαγή γλώσσας
        i18nElements.forEach(el => {
          const key = el.dataset.i18n;
          // Τώρα το translations[lang] υπάρχει και για 'el' και για 'en'
          if (translations[lang] && translations[lang][key]) {
            el.textContent = translations[lang][key];
          }
        });

        document.documentElement.lang = lang === 'en' ? 'en' : 'el';
      });
    });
